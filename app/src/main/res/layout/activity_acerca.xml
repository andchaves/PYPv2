<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_acerca"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sistemas.pypv2.AcercaActivity"
    android:orientation="vertical"
    android:background="@drawable/fondopico"
    android:weightSum="1">


    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_weight="0.12" />

    <Button
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:id="@+id/sali"
        android:background="@android:drawable/btn_dialog"
        android:elevation="1dp"
        android:onClick="regresar" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/imagen"
        android:id="@+id/imageView"
        android:layout_weight="0.05" />

    <TextView
        android:text="ANDRES CAMILO CHAVES LEGARDA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textColor="@android:color/background_light"
        android:layout_weight="0.04" />

    <TextView
        android:text="Universidad Mariana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_weight="0.25"
        android:textColor="@android:color/background_light" />


</LinearLayout>
